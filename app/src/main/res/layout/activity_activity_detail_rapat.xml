<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mafia.kegiatanmahasiswa.activity_detail_rapat"
    android:background="#ffffff">
    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nama Rapat"
        android:id="@+id/textView"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#4b4c5d"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/sample_fly" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageButton"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:background="@drawable/group"
        android:adjustViewBounds="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pimpinan rapat"
        android:id="@+id/txt_lokasi"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:textColor="#4b4c5d"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:background="@drawable/group"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Notulen Rapat"
        android:id="@+id/txt_tanggal"
        android:layout_below="@+id/txt_lokasi"
        android:layout_alignLeft="@+id/txt_lokasi"
        android:layout_alignStart="@+id/txt_lokasi"
        android:textColor="#4b4c5d"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:background="@drawable/group"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jumlah Peserta Rapat"
        android:id="@+id/txt_waktu"
        android:layout_below="@+id/txt_tanggal"
        android:layout_alignLeft="@+id/txt_tanggal"
        android:layout_alignStart="@+id/txt_tanggal"
        android:textColor="#4b4c5d"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView5"
        android:background="@drawable/date"
        android:layout_below="@+id/imageView4"
        android:layout_toLeftOf="@+id/txt_lokasi"
        android:layout_toStartOf="@+id/txt_lokasi"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tanggal"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignLeft="@+id/txt_waktu"
        android:layout_alignStart="@+id/txt_waktu"
        android:textColor="#304294"
        android:layout_marginTop="3dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView6"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:background="@drawable/file"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hasil Rapat"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:textColor="#304294"
        android:layout_marginTop="13dp" />



</RelativeLayout>
