<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#ffffff">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:id="@+id/foto_profil"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nama Acara"
        android:id="@+id/txt_rapat"
        android:layout_alignTop="@+id/foto_profil"
        android:layout_toRightOf="@+id/foto_profil"
        android:layout_toEndOf="@+id/foto_profil"
        android:textColor="#6a6e85"
        android:layout_marginLeft="20dp"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView9"
        android:layout_below="@+id/txt_rapat"
        android:layout_alignLeft="@+id/txt_rapat"
        android:layout_alignStart="@+id/txt_rapat"
        android:layout_marginTop="10dp"
        android:background="@drawable/home" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jl.Dr Mansyur, No.29, Medan, Sumatera Utara"
        android:id="@+id/txt_lokasi"
        android:layout_alignTop="@+id/imageView9"
        android:layout_toRightOf="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9"
        android:layout_marginLeft="10dp"
        android:textColor="#7c1f202c"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView10"
        android:layout_below="@+id/txt_lokasi"
        android:layout_alignLeft="@+id/imageView9"
        android:layout_alignStart="@+id/imageView9"
        android:background="@drawable/date"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20 November 2015"
        android:id="@+id/txt_tanggal"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignLeft="@+id/txt_lokasi"
        android:layout_alignStart="@+id/txt_lokasi"
        android:textSize="15dp"
        android:textColor="#7c1f202c"
        android:layout_marginTop="3dp" />
</RelativeLayout>
